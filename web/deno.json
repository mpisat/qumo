{
  "tasks": {
    "dev": "deno run -A npm:vite",
    "build": "deno run -A npm:vite build",
    "preview": "deno run -A npm:vite preview"
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.5",
    "@okdaichi/golikejs": "jsr:@okdaichi/golikejs@^0.6.1",
    "@okdaichi/moq": "jsr:@okdaichi/moq@^0.8.0"
  },
  "compilerOptions": {
    "lib": ["esnext", "dom", "dom.iterable"],
    "types": ["vite/client"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  }
}
